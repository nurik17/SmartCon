<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.ConSmart" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="color">#876AFA</item>
        <item name="android:windowBackground">#F2F2F2</item>
    </style>

    <style name="Theme.ConSmart" parent="Base.Theme.ConSmart" />

    <style name="MyBottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/white</item>
        <item name="android:backgroundDimAmount">-0.8</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Base.Theme.ConSmart.MyRipple">
        <item name="colorControlHighlight">@color/ripple_color</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Base.Theme.ConSmart.RippleRecyclerItem">
        <item name="colorControlHighlight">@color/ripple_color_recycler_item</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Base.Theme.ConSmart.MyRippleFlashLight">
        <item name="colorControlHighlight">#876AFA</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Base.Theme.ConSmart.TextRiple">
        <item name="colorControlHighlight">@color/ripple_color</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>


    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="MyFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:background">@color/white</item>
        <item name="android:src">@drawable/ic_scan</item>
        <!-- Другие атрибуты, которые вы хотите переопределить для FAB -->
    </style>


</resources>