<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Главный текст и кнопка закрытия -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите тему акта"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="24sp"
            android:clickable="true"
            android:focusable="true"
            android:theme="@style/Base.Theme.ConSmart.MyRipple"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"/>

        <!-- Кнопка закрытия -->
        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:theme="@style/Base.Theme.ConSmart.MyRipple"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_close"
            android:contentDescription="Закрыть"
            android:layout_gravity="end" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обследования небытовых потребителей"
        android:textSize="18sp"
        android:textColor="#363636"
        android:layout_marginTop="20dp"/>

    <!-- Второй дополнительный текст -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Замена ПКУ небытовых потребителей"
        android:textSize="16sp"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        android:layout_marginTop="20dp"/>

    <!-- Третий дополнительный текст -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Инвентаризации и инструментальной проверки ПКУ бытовых потребителей"
        android:textSize="18sp"
        android:textColor="#363636"
        android:layout_marginTop="20dp"/>

    <!-- Четвертый дополнительный текст -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Замена электросчётчика бытовых потребителей"
        android:textSize="18sp"
        android:textColor="#363636"
        android:layout_marginTop="20dp"/>

    <!-- Пятый дополнительный текст -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обследования для бытовых потребителей"
        android:textSize="18sp"
        android:textColor="#363636"
        android:layout_marginTop="20dp"/>

</LinearLayout>
