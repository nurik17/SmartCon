<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature_counter.CounterFragment">

    <ImageButton
        android:id="@+id/arrow_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_left_arrow"
        android:scaleType="centerCrop"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminateOnly="false"
        android:progress="33"
        android:max="100"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/progress_background" />

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="1 of 3"
        app:layout_constraintTop_toTopOf="@id/progress_bar"
        app:layout_constraintStart_toStartOf="@id/progress_bar"
        app:layout_constraintEnd_toEndOf="@id/progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/progress_bar" />
    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:fontFamily="@font/roboto_400"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#4019DD"
        android:text="ул.  Алматинская обл., г. Алматы, ул. Тобаякова 2а"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_bar"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/text_ls_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#363636"
        android:fontFamily="@font/roboto_400"
        android:text="98054000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_address"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/text_cv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CV4123436"
        android:fontFamily="@font/roboto_400"
        android:textColor="#363636"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@id/text_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_ls_number"
        tools:ignore="UseCompatTextViewDrawableXml" />
    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01.01.20"
        android:textColor="#363636"
        android:fontFamily="@font/roboto_400"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/text_ls_number"
        app:layout_constraintStart_toEndOf="@id/text_cv_number"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подробнее"
        android:textColor="#363636"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_400"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/text_detail_background"/>

    <TextView
        android:id="@+id/text_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_500"
        android:text="Введите показания счётчика"
        android:textColor="#363636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_detail"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:padding="3dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/text_write"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/counter_item"/>


    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="1"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        android:textColor="#363636"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerView"
        />

    <TextView
        android:id="@+id/two"
        android:textColor="#363636"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_marginTop="25dp"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintTop_toBottomOf="@id/recyclerView"
        app:layout_constraintHorizontal_bias="0.5"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/three"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="3"
        android:textColor="#363636"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        android:layout_marginTop="25dp"
        android:textSize="26sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/four"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="4"
        android:textColor="#363636"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/one" />

    <TextView
        android:id="@+id/five"
        android:textColor="#363636"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:clickable="true"
        android:padding="5dp"

        android:focusable="true"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        android:layout_marginTop="20dp"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintHorizontal_bias="0.5"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="6"
        android:textColor="#363636"
        android:layout_marginTop="20dp"
        android:textSize="26sp"
        android:clickable="true"
        android:padding="5dp"

        android:focusable="true"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/three" />
    <TextView
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="7"
        android:textColor="#363636"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/four" />

    <TextView
        android:id="@+id/eight"
        android:textColor="#363636"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        android:layout_marginTop="20dp"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintTop_toBottomOf="@id/five"
        app:layout_constraintHorizontal_bias="0.5"
        android:gravity="center" />
    <TextView
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="9"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        android:textColor="#363636"
        android:layout_marginTop="20dp"
        android:textSize="26sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/six" />

    <TextView
        android:id="@+id/zero"
        android:textColor="#363636"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintTop_toBottomOf="@id/eight"
        app:layout_constraintHorizontal_bias="0.5"
        android:gravity="center"
        android:padding="5dp"

        />

    <ImageButton
        android:id="@+id/flashLight_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:padding="5dp"
        android:theme="@style/Base.Theme.ConSmart.MyRippleFlashLight"
        android:src="@drawable/ic_flashlight"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toBottomOf="@id/seven"/>
    <ImageButton
        android:id="@+id/ic_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/Base.Theme.ConSmart.MyRipple"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_delete"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nine" />

    <Button
        android:id="@+id/counter_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#E7E1FE"
        android:text="Далее"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zero" />

</androidx.constraintlayout.widget.ConstraintLayout>